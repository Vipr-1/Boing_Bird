<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/game_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_day"
    tools:context=".GameLogic">

    <!-- These two are now “placeholder” pipes; the game will spawn new pipes programmatically -->

    <ImageView
        android:id="@+id/pipeNorth"
        android:layout_width="80dp"
        android:layout_height="350dp"
        android:layout_marginStart="184dp"
        android:layout_marginTop="240dp"
        android:rotationX="180"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pipesouth" />

    <ImageView
        android:id="@+id/pipeSouth"
        android:layout_width="80dp"
        android:layout_height="350dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/pipesouth" />

    <ImageView
        android:id="@+id/birdImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/bird_default"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="100dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
