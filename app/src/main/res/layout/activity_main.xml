<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_home"
    tools:context=".MainActivity">


    <Switch
        android:id="@+id/switch1"
        android:layout_width="101dp"
        android:layout_height="76dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Dark Mode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/Mute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="307dp"
        android:layout_marginTop="667dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="16dp"
        android:text="ToggleButton"
        android:textOff="Music On"
        android:textOn="Music Off"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imagePlay"
        android:layout_width="214dp"
        android:layout_height="84dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="432dp"
        android:adjustViewBounds="true"
        android:backgroundTint="#00FFFFFF"
        android:clickable="true"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/button_play" />

    <ImageButton
        android:id="@+id/imageSkins"
        android:layout_width="215dp"
        android:layout_height="87dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="345dp"
        android:adjustViewBounds="true"
        android:backgroundTint="#00FFFFFF"
        android:clickable="true"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/button_skins" />

    <ImageButton
        android:id="@+id/image3"
        android:layout_width="194dp"
        android:layout_height="65dp"
        android:layout_marginStart="107dp"
        android:layout_marginTop="616dp"
        android:background="#00FFFFFF"
        android:clickable="true"
        android:cropToPadding="true"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/button_how_to_play" />

    <ImageView
        android:id="@+id/buttonHardLevel"
        android:layout_width="190dp"
        android:layout_height="67dp"
        android:layout_marginStart="107dp"
        android:layout_marginTop="528dp"
        android:clickable="true"
        android:cropToPadding="true"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/button_hard_level" />


</androidx.constraintlayout.widget.ConstraintLayout>